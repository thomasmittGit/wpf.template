                        <TextBlock Text="Test"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Foreground="White"
                                   FontSize="22"
                                   Margin="15,0,0,0"/>
                    </StackPanel>
                    <!--Tile End-->

                    <!--Side Menu-->
                    <Border Grid.Row="1"
                            BorderBrush="Transparent">
                        <StackPanel>
                            <Button Style="{StaticResource StackPannelMenuStyle}" Command="{Binding HomeViewCommand}">
                                <StackPanel Width="200" Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Button Style="{StaticResource SideMenuButtonsStyle}" Content="{DynamicResource home}" Command="{Binding HomeViewCommand}"/>
                                    <RadioButton Content="Home" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}" Command="{Binding HomeViewCommand}"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource StackPannelMenuStyle}" Command="{Binding DiscoveryViewCommand}">
                                <StackPanel Width="200" Orientation="Horizontal">
                                    <Button Style="{StaticResource SideMenuButtonsStyle}" Content="{DynamicResource home}" Command="{Binding DiscoveryViewCommand}"/>
                                    <RadioButton Content="Discovey" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}" Command="{Binding DiscoveryViewCommand}"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>
                    <!--Side Menu End-->

                </Grid>
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--Action Buttons-->
                <StackPanel Grid.Column="1" 
                            Grid.Row="0" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top" 
                            Margin="0,5,10,0" 
                            Height="30" 
                            Orientation="Horizontal" 
                            FlowDirection="RightToLeft" 
                            Grid.RowSpan="2">
                    <Button x:Name="btnClose" 
                            Style="{StaticResource IconButtonsStyle}" 
                            Content="{DynamicResource close}" 
                            Click="btnClose_Click" 
                            Tag="IsCloseButton"/>
                    <Button x:Name="btnMinimize" 
                            Style="{DynamicResource IconButtonsStyle}" 
                            Content="{DynamicResource minimize}" 
                            Click="btnMinimize_Click"/>
                </StackPanel>
                <!--Action Buttons End-->

                <!--Search Box-->
                <StackPanel Orientation="Horizontal"
                            Grid.Column="1">
                    <ToggleButton x:Name="Tg_Btn" 
                                  VerticalAlignment="Center" 
                                  Style="{DynamicResource iToggleButtonStyle}" 
                                  HorizontalAlignment="Left" 
                                  BorderThickness="0" 
                                  Background="Transparent" 
                                  Margin="10,15,0,15" 
                                  Height="30" 
                                  Width="30">
                        <ToggleButton.Triggers>
                            <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                                <BeginStoryboard>
                                    <Storyboard x:Name="HideStackPanel">
                                        <DoubleAnimation Storyboard.TargetName="GridNav" 
                                                        Storyboard.TargetProperty="Width" 
                                                        BeginTime="0:0:0" 
                                                        From="200" To="50" 
                                                        Duration="0:0:0.5">
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="ToggleButton.Checked">
                                <BeginStoryboard>
                                    <Storyboard x:Name="ShowStackPanel">
                                        <DoubleAnimation Storyboard.TargetName="GridNav" 
                                                        Storyboard.TargetProperty="Width" 
                                                        BeginTime="0:0:0" 
                                                        From="50" To="200" 
                                                        Duration="0:0:0.5">
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ToggleButton.Triggers>
                    </ToggleButton>

                    <TextBox x:Name="SeachBox"
                             VerticalContentAlignment="Center"
                             HorizontalAlignment="Left"
                             Margin="10"
                             Style="{StaticResource ModernTextBox}"
                             SelectionChanged="SeachBox_SelectionChanged"/>
                </StackPanel>
                <!--SearchBox End-->

                <!--Content-->
                <ContentControl Grid.Row="1"
                                Grid.Column="1"
                                Margin="10"
                                Content="{Binding CurrentView}"/>
                <!--Content End-->
            </Grid>
        </Grid>
    </Border>
</Window>
